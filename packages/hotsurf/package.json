{
  "name": "@coldsurfers/hotsurf",
  "private": true,
  "version": "0.2.6",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "rollup:native": "rollup -c ./rollup.config.native.js",
    "rollup:web": "rollup -c ./rollup.config.web.js",
    "rollup:all": "yarn rollup:native && yarn rollup:web",
    "build": "rm -rf dist && yarn rollup:all && tsc --emitDeclarationOnly",
    "build:token": "ts-node src/lib/token-builder/build.ts",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "18.2.0",
    "style-dictionary": "^3.7.1",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/react": "^18.0.15",
    "@types/react-native": "^0.69.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "2.8.1",
    "react-native": "^0.70.6",
    "react-native-web": "^0.18.10",
    "rollup": "^3.9.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "react": ">= 18.2.0",
    "react-native": ">= 0.69.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn run lint:fix",
      "bash -c 'yarn typecheck'"
    ]
  }
}
